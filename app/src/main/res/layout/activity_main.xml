<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--
        padding 은 글씨 간격을 딱 맞추어 줍니다.
        gravity 는 글씨의 위치를 정렬할 때 사용합니다.
        예) 오른쪽 정렬, 가운데 정렬, 왼쪽 정렬 등등...
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:id="@+id/text_result"
        android:text="0"
        android:textSize="40dp"/>

    <!--
        약간 그림자를 드리운 것 같이 꾸미고 싶다면
        글자 상하 간격 Text 크기를 늘이는 padding 을 활용하여
        그림자를 드리운 것 같은 효과를 제시합니다.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10px"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_7"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_8"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_9"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_Multiply"
            android:layout_weight="1"
            android:text="X"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10px"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_4"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_5"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_6"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_Minus"
            android:layout_weight="1"
            android:text="─"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10px"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_1"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_2"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_3"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_Plus"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_AC"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="30dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_0"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_Divide"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_Equal"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp"/>
    </LinearLayout>
</LinearLayout>